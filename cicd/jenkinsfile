pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                sh 'pip install -r requirements.txt'
                sh 'python (link unavailable) build'
            }
            post {
                success {
                    script {
                        currentBuild.result = 'SUCCESS'
                    }
                }
                failure {
                    script {
                        currentBuild.result = 'FAILURE'
                    }
                }
            }
        }
        stage('Build Docker Image') {
            steps {
                sh 'docker build -t davidokpe/ms1-app .'
            }
            post {
                success {
                    script {
                        currentBuild.result = 'SUCCESS'
                    }
                }
                failure {
                    script {
                        currentBuild.result = 'FAILURE'
                    }
                }
            }
        }
        stage('Push to Docker Hub') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'docker-hub-repo', passwordVariable: 'DOCKER_PASSWORD', usernameVariable: 'DOCKER_USERNAME')]) {
                    sh 'docker login -u $DOCKER_USERNAME -p $DOCKER_PASSWORD'
                    sh 'docker push davidokpe/ms1-app'
                }
            }
            post {
                success {
                    script {
                        currentBuild.result = 'SUCCESS'
                    }
                }
                failure {
                    script {
                        currentBuild.result = 'FAILURE'
                    }
                }
            }
        }
    }
    post {
        success {
            sh 'docker rmi davidokpe/ms1-app:latest'
        }
    }
}
